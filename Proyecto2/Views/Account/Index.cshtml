@model IEnumerable<Proyecto2.Models.EditUserViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Register") 
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Persona.Dpi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Persona.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Persona.Apellido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Persona.Email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <th>
            @Html.DisplayFor(modelItem => item.Persona.Dpi)
        </th>
        <th>
            @Html.DisplayFor(modelItem => item.Persona.Nombre)
        </th>
        <th>
            @Html.DisplayFor(modelItem => item.Persona.Apellido)
        </th>
        <th>
            @Html.DisplayFor(modelItem => item.Persona.Email)
        </th>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.UserName }) |
            @Html.ActionLink("Roles", "UserRoles", new { id = item.UserName }) |
            @Html.ActionLink("Borrar", "Delete", new { id = item.UserName })
        </td>
    </tr>
}

</table>
